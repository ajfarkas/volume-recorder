{
		"env": {
				"browser": true,
				"es6": true,
				"jquery": false,
				"node": true
		},
		"rules": {
				"no-constant-condition": 2,
				"no-control-regex": 2,
				"no-dupe-args": 2,
				"no-dupe-keys": 2,
				"no-empty": 2,
				"no-empty-character-class": 2,
				"no-ex-assign": 2,
				"no-func-assign": 2,
				"no-invalid-regexp": 2,
				"no-irregular-whitespace": 2,
				"no-negated-in-lhs": 2,
				"no-obj-calls": 2,
				"no-regex-spaces": 2,
				"no-unexpected-multiline": 2,
				"no-unreachable": 2,
				"use-isnan": 2,
				"valid-typeof": 2,

				"curly": [2, "multi-line"],
				"eqeqeq": 2,
				"no-div-regex": 2,
				"no-empty-pattern": 2,
				"no-floating-decimal": 2,
				"no-loop-func": 2,
				"no-multi-spaces": 2,
				"no-redeclare": 2,
				"no-self-assign": 2,
				"no-self-compare": 2,
				"vars-on-top": 2,
				"wrap-iife": 2,
				"init-declarations": 0,
				"no-shadow": 2,
				"no-shadow-restricted-names": 2,
				"no-unused-vars": 1,
				"no-use-before-define": 2,

				"block-spacing": 2,
				"brace-style": [2, "1tbs"],
				"camelcase": 1,
				"comma-style": [2, "last"],
				"func-names": 2,
				"indent": [2, 'tab', {
					"VariableDeclarator": { "var": 2, "let": 2, "const": 3},
					"SwitchCase": 1
				}],
				"jsx-quotes": [2, "prefer-double"],
				"new-cap": 2,
				"no-lonely-if": 2,
				"no-mixed-spaces-and-tabs": [2, "smart-tabs"],
				"no-spaced-func": 2,
				"no-trailing-spaces": 0,
				"no-unneeded-ternary": 2,
				"quotes": [2, "single", {"allowTemplateLiterals": true}],

				"no-var": 1,
		}
}
